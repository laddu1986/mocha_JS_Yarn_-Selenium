{
  "name": "qa-automation",
  "version": "1.0.0",
  "description": "qa-automation framework for e2e testing using node and mocha",
  "dependencies": {
    "app-module-path": "^2.2.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-latest": "^6.24.1",
    "babel-register": "^6.26.0",
    "chakram": "^1.5.0",
    "chakram-joi": "^1.0.0",
    "dateformat": "^3.0.3",
    "dotenv": "^6.0.0",
    "grpc": "^1.15.1",
    "grpc-caller": "^0.9.0",
    "mocha": "^5.0.5",
    "mocha-testrail-reporter-custom": "^1.0.15",
    "randomstring": "^1.1.5",
    "wdio-testrail-reporter": "^1.1.5"
  },
  "scripts": {
    "api": "node_modules/.bin/mocha specs/*Test.js --opts config/mocha.opts --reporter-options reportName=API,domain=$TESTRAIL_URL,username=$TESTRAIL_USERNAME,password=$TESTRAIL_PASSWORD,projectId=$TESTRAIL_PROJECT,suiteId=$TESTRAIL_API",
    "api-local": "node_modules/.bin/mocha specs/*Test.js --opts config/local.opts",
    "api-debug": "node_modules/.bin/mocha --inspect-brk=127.0.0.1:5858 specs/*Test.js --opts config/local.opts",
    "api-smoke-tests": "node_modules/.bin/mocha specs/*Test.js --opts config/mocha.opts --grep @smoke",
    "sync-tests": "node node_modules/wdio-testrail-reporter/scripts/generate-cases.js $(pwd)/wdio.testrail.js $(pwd)/specs/",
    "clean": "eslint '**/*.js' --fix",
    "lint": "eslint '**/*.js'",
    "precommit": "lint-staged",
    "gen-protos": "node config/gen-protos.js"
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "author": "QA Team",
  "license": "UNLICENSED",
  "devDependencies": {
    "babel-eslint": "^10.0.1",
    "eslint": "^5.7.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-babel": "^5.2.1",
    "eslint-plugin-mocha": "^5.2.0",
    "fs-extra": "^7.0.1",
    "lint-staged": "^7.3.0",
    "mocha-multi-reporters": "^1.1.7",
    "mocha-simple-html-reporter": "^1.1.0",
    "prettier": "^1.14.3"
  },
  "pre-commit": [
    "precommit"
  ]
}
